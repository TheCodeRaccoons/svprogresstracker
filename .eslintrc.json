{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreUrls": true,
        "ignoreStrings": false,
        "ignoreTemplateLiterals": false,
        "ignoreRegExpLiterals": true,
        "ignoreComments": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "max-len": [
          "warn",
          {
            "code": 120,
            "tabWidth": 4,
            "ignoreUrls": true,
            "ignoreStrings": false,
            "ignoreTemplateLiterals": false,
            "ignoreRegExpLiterals": true,
            "ignoreComments": false
          }
        ]
      }
    }
  ]
}
